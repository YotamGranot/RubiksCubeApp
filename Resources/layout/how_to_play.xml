
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rltvHTP"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exit"        
        android:id="@+id/btnExitHowToPlay"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the cube simulator"
        android:id="@+id/tvTitleHTP"
        android:fontFamily="casual"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        
        android:layout_below="@id/btnExitHowToPlay"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHTPInstructions"
        android:layout_alignParentBottom="true"    
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:text="To rotate the whole cube you need to swipe your finger from the center you want to rotate from towrds the center you want to rotate to.\n
To rotate a layer simply swipe on the layer in the desired direction while stayiing on the same side. "/>


</RelativeLayout>