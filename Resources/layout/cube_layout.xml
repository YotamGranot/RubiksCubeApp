
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rltv">
    <Button
        android:id="@+id/btnSave"
        android:tag="#4CAF50"
        android:backgroundTint="#4CAF50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Exit"
        android:textSize="16dp"
        android:textColor="#000000"/>

    <!-- must be after the related widjet -->
    <Button
        android:id="@+id/btnShuffle"
        android:tag="#3F51B5"
        android:backgroundTint="#3F51B5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/btnSave"
        android:text="shuffle"
        android:textSize="16dp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/btnSolve"
        android:tag="#F44336"
        android:backgroundTint="#F44336"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/btnShuffle"
        android:text="Solve"
        android:textSize="16dp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/btnShow"
        android:tag="#FFEB3B"
        android:backgroundTint="#FFEB3B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/btnSolve"
        android:text="Show"
        android:textSize="16dp"
        android:textColor="#000000"/>
    
    <Button
        android:id="@+id/btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvTimer"
        android:text="Right"
        android:layout_marginBottom="5dp"
        android:textSize="16dp"/>
    <Button
        android:id="@+id/btnRightI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvTimer"
        android:layout_toRightOf="@id/btnRight"
        android:text="Right I"
        android:layout_alignTop="@+id/btnRight"
        android:textSize="16dp"
        android:layout_marginBottom="5dp"
/>
    <Button
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvTimer"
        android:layout_toRightOf="@id/btnRightI"
        android:layout_alignTop="@+id/btnRight"
        android:text="Left"
        android:textSize="16dp"
        android:layout_marginBottom="5dp"
/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvTimer"
        android:layout_toRightOf="@id/btnLeft"
        android:layout_alignTop="@+id/btnRight"
        android:text="Left I"
        android:id="@+id/btnLeftI"
        android:textSize="16dp"
        android:layout_marginBottom="5dp"
/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnRight"
        android:text="Up"
        android:id="@+id/btnUp"
        android:textSize="16dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnRight"
        android:layout_toRightOf="@id/btnUp"
        android:gravity="center_horizontal"
        android:text="Up I"
        android:id="@+id/btnUpI"
        android:textSize="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnRight"
        android:layout_toRightOf="@id/btnUpI"
        android:gravity="center_horizontal"
        android:text="Down"
        android:id="@+id/btnDown"
        android:textSize="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/btnRight"
        android:layout_toRightOf="@id/btnDown"
        android:gravity="center_horizontal"
        android:text="Down I"
        android:id="@+id/btnDownI"
        android:textSize="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnUp"
        android:text="Front"
        android:id="@+id/btnFront"
        android:textSize="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnUp"
        android:layout_toRightOf="@id/btnFront"
        android:gravity="center_horizontal"
        android:text="front I"
        android:id="@+id/btnFrontI"
        android:textSize="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnUp"
        android:layout_toRightOf="@id/btnFrontI"
        android:gravity="center_horizontal"
        android:text="back"
        android:id="@+id/btnBack"
        android:textSize="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnUp"
        android:layout_toRightOf="@id/btnBack"
        android:gravity="center_horizontal"
        android:text="Back I"
        android:id="@+id/btnBackI"
        android:textSize="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTimer"/>
</RelativeLayout>