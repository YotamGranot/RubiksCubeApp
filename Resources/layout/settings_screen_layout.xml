<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Background \nmusic"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="25dp"
            android:textAlignment="gravity"
            android:gravity="left"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettingsStartMusic"
            android:text="@string/abc_capital_on"
            android:backgroundTint="#00ff00"
            android:textSize="40dp"
            android:layout_margin="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettingsStopMusic"
            android:text="@string/abc_capital_off"
            android:backgroundTint="#ff0000"
            android:textSize="40dp"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cube turns\nbuttons"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="25dp"
            android:textAlignment="gravity"
            android:gravity="left"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettingsHelpButtonsOn"
            android:text="@string/abc_capital_on"
            android:backgroundTint="#00ff00"
            android:textSize="40dp"
            android:layout_margin="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettingsHelpButtonsOff"
            android:text="@string/abc_capital_off"
            android:backgroundTint="#ff0000"
            android:textSize="40dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example solve\nspeed (tps)"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="25dp"
            android:textAlignment="gravity"
            android:gravity="left"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:id="@+id/etTps"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Choose Music"
            android:layout_marginTop="10dp"
            android:id="@+id/btnChooseMusic"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Exit"
            android:layout_marginTop="10dp"
            android:id="@+id/btnExitSettings"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
